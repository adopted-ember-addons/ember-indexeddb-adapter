<section id="find-all">
  <ul>
    {{#each posts as |post|}}
      <li>
        <div><p>{{post.user.name}}</p></div>
        {{#link-to "posts.post" post.id}}
          <p>{{post.title}}</p>
          <p>{{post.body}}</p>
        {{/link-to}}
      </li>
    {{/each}}
  </ul>
</section>

<section id="query-record">
  <ul>
    <li>
      <p>{{queryPost.title}}</p>
      <p>{{queryPost.body}}</p>
    </li>
  </ul>
</section>

<section id="query">
  <ul>
    {{#each queryPosts as |post|}}
      <li>
        <p>{{post.title}}</p>
        <p>{{post.body}}</p>
      </li>
    {{/each}}
  </ul>
</section>

<button {{action "createPost"}}>New Post</button>
